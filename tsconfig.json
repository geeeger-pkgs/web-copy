{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": ["es6", "dom"],
    "outDir": "./lib",
    "sourceMap": false,
    "allowJs": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "downlevelIteration": true,
    "typeRoots": ["./node_modules/@types"],
    "newLine": "LF"
  },
  "include": ["./src"]
}
